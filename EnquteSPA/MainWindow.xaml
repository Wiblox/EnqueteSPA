
<mah:MetroWindow
    x:Class="EnquteSPA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EnquteSPA"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Suivi Enquete SPA"
    Width="1280"
    Height="720"
    ShowTitleBar="False"
    mc:Ignorable="d">
    <mah:MetroWindow.Resources />

    <Grid>
        <TabControl
            BorderBrush="#FF70624F"
            BorderThickness="0,2,1,0"
            Style="{DynamicResource MahApps.Styles.TabControl.Animated}">
            <TabItem Width="130px" IsEnabled="False">
                <TabItem.Header>
                    <Image Width="50" Source="/EnquteSPA;component/logo.png" />
                </TabItem.Header>
            </TabItem>
            <TabItem VerticalAlignment="Center" Header="Accueil">
                <Grid Background="#F1F3F4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>




                    <DataGrid
                        x:Name="data"
                        Grid.Row="0"
                        Margin="60,30,60,0"
                        VerticalAlignment="Top"
                        Initialized="data_Initialized"
                        IsReadOnly="True" />

                    <Grid Grid.Row="1">
                        <Button
                            Width="100px"
                            Height="50px"
                            Background="#EB651C"
                            Foreground="White">
                            Saisir un rapport
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem VerticalAlignment="Center" Header="Rapports">
                <Grid Background="#F1F3F4" />
            </TabItem>
            <TabItem VerticalAlignment="Center" Header="Utilisateurs">
                <Grid Background="#F1F3F4" />
            </TabItem>



        </TabControl>
    </Grid>
</mah:MetroWindow>
