<mah:MetroWindow
    x:Class="EnquteSPA.OuvertureEnquete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EnquteSPA"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Enquete"
    Width="1200"
    Height="750"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="10px">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="30px" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="GridVisite"
                    Grid.Row="0"
                    Initialized="DataGrid_Initialized" />
                <Button Grid.Row="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                    <TextBlock>Ajouter une visite</TextBlock>
                </Button>
            </Grid>
            <Grid Grid.Column="1" Margin="10px">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="30px" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="GridDocument"
                    Grid.Row="0"
                    Initialized="DataGrid_Initialized_1" />
                <Button Grid.Row="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                    <TextBlock>Ajouter un document</TextBlock>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</mah:MetroWindow>
